<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="18dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etkinlik Adı: "
            android:layout_marginBottom="16dp"
            android:textSize="18dp"

            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:ems="13"
            android:id="@+id/etkinlikad"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etkinlik Tarihi: "
            android:textSize="18dp"
            android:layout_marginBottom="16dp"

            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:ems="12"
            android:id="@+id/etkinlikttarih"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres: "
            android:textSize="18dp"
            android:layout_marginBottom="16dp"
            />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:ems="15"
        android:id="@+id/etkinlikadres"

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontenjan: "
            android:textSize="18dp"
            android:layout_marginBottom="16dp"


            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:ems="14"
            android:inputType="phone"
            android:id="@+id/etkinlikkontenjan"
            />

    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Açıklama: "
            android:textSize="18dp"
            android:layout_marginBottom="16dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/etkinlikaciklama"
            android:ems="14"/>


    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button

            android:id="@+id/btnEtkinlik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nextbuton"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"

            />



    </RelativeLayout>






</LinearLayout>